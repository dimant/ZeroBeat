<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dtodorov.zerobeat.MainActivity"
    android:background="@color/primary_dark">

    <ListView
        android:id="@+id/lessons"
        android:layout_width="343dp"
        android:layout_height="456dp"
        android:choiceMode="singleChoice"
        android:listSelector="@color/accent"
        android:background="@color/primary_light"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <be.rijckaert.tim.animatedvector.FloatingMusicActionButton
        android:id="@+id/button_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:backgroundTint="@color/accent"
        app:mode="playToStop"
        android:layout_marginRight="160dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"/>

    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button_music"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_music"
        app:srcCompat="@mipmap/ic_settings"/>

</android.support.constraint.ConstraintLayout>
